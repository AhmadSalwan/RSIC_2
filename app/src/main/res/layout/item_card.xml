<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:background="@drawable/bg_itemlist"
    android:elevation="4dp"
    android:radius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_itemlist"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_titleitemJD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Data Science"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_companyNameitemJD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_titleitemJD"
            tools:text="Apple Corporation"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_descSkillItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_companyNameitemJD"
            tools:text="Apple Inc. is a multinational technology company headquartered in Cupertino, California, that designs, develops, and sells consumer electronics"
            android:textColor="#EAEAEA"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/check_results_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_descSkillItem"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FFD54F"
            android:text="Check the results"
            android:textColor="#000000"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
