<!-- res/drawable/curved_navbar_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#FFFFFF" /> <!-- Warna putih untuk background -->

    <!-- Radius lengkungan -->
    <corners android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="50dp"
        android:bottomRightRadius="50dp" />

    <!-- Optional: Bayangan atau outline -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3"/> <!-- Warna border -->
</shape>
